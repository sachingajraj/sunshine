<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment"
    android:id="@+id/todayFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today, June 19"
        android:id="@+id/todayTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="33dp"
        android:textSize="22sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="22"
        android:textSize="72sp"
        android:id="@+id/maxTempView"
        android:layout_below="@+id/todayTextView"
        android:layout_alignLeft="@+id/todayTextView"
        android:layout_alignStart="@+id/todayTextView"
        android:layout_alignRight="@+id/todayTextView"
        android:layout_alignEnd="@+id/todayTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="22"
        android:textSize="36sp"
        android:id="@+id/minTempView"
        android:layout_below="@+id/maxTempView"
        android:layout_alignLeft="@+id/todayTextView"
        android:layout_alignStart="@+id/todayTextView"
        android:layout_alignRight="@+id/todayTextView"
        android:layout_alignEnd="@+id/todayTextView" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        android:layout_toRightOf="@+id/todayTextView"
        android:layout_alignTop="@+id/maxTempView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
